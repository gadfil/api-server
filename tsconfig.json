{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "lib": ["es2016", "esnext.asynciterable"],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,

        "sourceMap": true,
        "outDir": "build"
    },
    "exclude": [
        "node_modules",
        "node_modules/**",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}